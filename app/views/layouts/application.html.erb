<!DOCTYPE html>
<html>
<head>
  <title>Digitaltrainer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrap">
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			</button>
			<%= link_to 'digitalTRAINER', root_path, :class => 'navbar-brand'%>
		</div>
		
		<div class="collapse navbar-collapse">
			
			<ul class="nav navbar-nav">
				<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
				<li><a href="#">About</a></li>
				<li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
	          <ul class="dropdown-menu" role="menu">
	            <% if user_signed_in? %>
	            <li><%= link_to 'My Dashboard', user_dashboard_path %></li>
	            <li><%= link_to 'My Workouts', root_path %></li>
	            <li><%= link_to 'My Profile', root_path %></li>
	                <li class="divider"></li>
	                  <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
	                  <li><%= current_user.email %></li>
	            <% else %>
	              <li><a data-toggle="modal" href="#signinModal">Sign In</a></li>
	              <li><a data-toggle="modal" href="#signupModal">Sign Up</a></li>
	            <% end %>
	           </ul>
	      	</li>
			</ul>
			<button type="button" class="btn btn-default navbar-btn">Button</button>
			<div class="col-sm-3 col-md-3 pull-right">
	        <div class="navbar-text">Text</div>
			<form class="navbar-form" role="search">
			<div class="input-group">
				<input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
				<div class="input-group-btn">
					<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
				</div>
			</div>
			</form>
			</div>
			
		</div>
	</div>


<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<%= yield %>
</div>




</body>
</html>
